{
  "port": "63003",
  "dataset": [
    { "id": 1, "name": "Item 1", "price": 100 },
    { "id": 2, "name": "Item 2", "price": 200 }
  ],
  "endpoints": [
    {
      "method": "GET",
      "path": "/items",
      "response_type": "json",
      "logic": "return dataset"
    },
    {
      "method": "GET",
      "path": "/items/:id",
      "response_type": "json",
      "logic": "find by id in dataset"
    },  {
      "method": "POST",
      "path": "/items",
      "response_type": "json",
      "logic": "add item"
    },
    {
      "method": "POST",
      "path": "/pages/items",
      "response_type": "html",
      "logic": "add item",
      "html_body":"<h1>Successfully added item {request:name}</h1><table>{memory:dataset}</table>"
    },
    {
      "method": "GET",
      "path": "/pages/items",
      "response_type": "html",
      "logic": "return dataset",
      "html_body":"<table>{memory:dataset}</table>"
    },
    {
      "method": "DELETE",
      "path": "/pages/items/:id",
      "response_type": "html",
      "logic": "remove by id in dataset",
      "html_body":"<h1>Successfully removed item {routeparam:id}</h1><table>{memory:dataset}</table>"
    },
    {
      "method": "GET",
      "path": "/pages/items/:id",
      "response_type": "html",
      "logic": "find by id in dataset",
      "html_body": "<h1>Elem azonosito {routeparam:id}</h1><div>{memory:element}</div>"
    },
    {
      "method": "GET",
      "path": "/pages/greet",
      "response_type": "html",
      "html_body": "<h1>hello {queryparameter:name}</h1>"
    }
  ]
}
